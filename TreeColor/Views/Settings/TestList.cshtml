
@{
    ViewBag.Title = "Настройка тестов";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row" style="margin:75px 0px 75px 0px;">
    <div class="col s8 z-depth-5 offset-s2">
        <div class="row">
            <div class="col s3">
                @Html.ActionLink("Назад к тестированию", "LogOff", "Account", null, new { @class = "btn btn-default amber black-text", style = "margin-top:15px;" })
            </div>
            <div class="col s7">
                @Html.ActionLink("Загрузить Excel", "LoadExcel", "Report", null, new { @class = "btn btn-default amber black-text", style = "margin-top:15px;" })
            </div>
            <div class="col s2">
                @Html.ActionLink("Создать тест", "CreateTest", "Settings", null, new { @class = "btn btn-default amber black-text", style = "margin-top:15px;" })
            </div>
        </div>
        @if (ViewBag.ErrorMessage != null || ViewBag.SuccessMessage != null)
        {
        <div class="row" style="padding:0px 12px 0px 12px">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="card-panel red lighten-3 white-text" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="card-panel teal lighten-2  white-text" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
        </div>
        }
        @if (Model != null)
        {
            <ul class="collection with-header">
                <li class="collection-header"><h4>Выберите тест для настройки</h4></li>
                @foreach (ThreeColor.Data.Models.Tests test in Model)
                {
                    <a href="/Settings/SettingsTest/@test.Id" class="collection-item waves-effect waves-light">
                        <div>@test.Name<i class="material-icons secondary-content">send</i></div>
                    </a>
                }
            </ul>
        }
        else
        {
            <div class="card-panel red lighten-3" role="alert" style="color:white;">
                Что-то пошло не так, перезагрузите страницу
            </div>
        }
    </div>
</div>



