
@{
    ViewBag.Title = "Настройка тестов";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row" style="margin-top:75px;">
    <div class="col s8 z-depth-5 offset-s2">
        <div class="row">
            <div class="col s10">
                @Html.ActionLink("Назад к тестированию", "LogOff", "Account", null, new { @class = "btn btn-default", style = "margin-top:15px;" })
            </div>
            <div class="col s2">
                @Html.ActionLink("Создать тест", "CreateTest", "Settings", null, new { @class = "btn btn-default", style = "margin-top:15px;" })
            </div>
        </div>
        @if (ViewBag.ErrorMessage != null || ViewBag.SuccessMessage != null)
        {
        <div class="row" style="padding:0px 12px 0px 12px">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="card-panel red lighten-3" role="alert" style="color:white;">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="card-panel teal lighten-2" role="alert" style="color:white;">
                    @ViewBag.SuccessMessage
                </div>
            }
        </div>
        }
        @if (Model != null)
        {
            <ul class="collection with-header">
                <li class="collection-header"><h4>Выберите тест для настройки</h4></li>
                @foreach (ThreeColor.Data.Models.Tests test in Model)
                {
                    <a href="/Settings/SettingsTest/@test.Id" class="collection-item waves-effect waves-light">
                        <div>@test.Name<i class="material-icons secondary-content">send</i></div>
                    </a>
                }
            </ul>
        }
        else
        {
            <div class="card-panel red lighten-3" role="alert" style="color:white;">
                Что-то пошло не так, перезагрузите страницу
            </div>
        }
    </div>
</div>
<div class="fixed-action-btn horizontal click-to-toggle">
    <a class="btn-floating btn-large teal">
        <i class="material-icons waves-effect waves-light">menu</i>
    </a>
    <ul>
        <li><a class="btn-floating green waves-effect waves-light" href="/Settings/CreateTest"><i class="material-icons">add</i></a></li>
        <li><a class="btn-floating red waves-effect waves-light"><i class="material-icons">delete_forever</i></a></li>
    </ul>
</div>



