
@{
    ViewBag.Title = "Настройка тестов";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row" style="margin-top:75px;">
    <div class="col s8 z-depth-5 offset-s2">
        @Html.ActionLink("Назад к тестированию", "LogOff", "Account", null, new { @class = "btn btn-default", style = "margin-top:15px;"})
        <ul class="collection with-header">
            <li class="collection-header"><h4>Выберите тест для настройки</h4></li>
            @foreach (TreeColor.Models.Tests test in Model)
            {
                <a href="/Settings/SettingsTest/@test.id" class="collection-item waves-effect waves-light">
                    <div>@test.test_name<i class="material-icons secondary-content">send</i></div>
                </a>
            }
        </ul>
    </div>
</div>
<div class="fixed-action-btn horizontal click-to-toggle">
    <a class="btn-floating btn-large teal">
        <i class="material-icons waves-effect waves-light">menu</i>
    </a>
    <ul>
        <li><a class="btn-floating green waves-effect waves-light" href="/Settings/CreateTest"><i class="material-icons">add</i></a></li>
        <li><a class="btn-floating red waves-effect waves-light"><i class="material-icons">delete_forever</i></a></li>
    </ul>
</div>



